             <script>
document.addEventListener("DOMContentLoaded", function() {
    fetchDockerImages(); 

    async function fetchDockerImages() {
        try {
            const response = await fetch('/images');
            const images = await response.json();
            const imagesContainer = document.getElementById('imagesContainer');
            
            imagesContainer.innerHTML = ''; 

            let row;

            images.forEach((image, index) => {
                if (index % 2 === 0) {
                    row = document.createElement('div');
                    row.className = 'row';
                    imagesContainer.appendChild(row);
                }

                const imageElement = document.createElement('div');
                imageElement.className = 'col-md-6';
                imageElement.innerHTML = `
                    <div class="card">
                      <div class="card-header">
                        <h4 class="card-title text-center">${image.name}</h4>
                      </div>
                      <div class="card-body">
                        <h5>ID: ${image.imageId}</h5>
                        <h5>Date of Creation: ${new Date().toLocaleDateString()}</h5>
                        <p class="demo">
                        <div class="text-center dockerfile-actions">
                          <button class="btn btn-danger mb-2" onclick="deleteImage('${image.imageId}')">Delete</button>
                          <button class="btn btn-info mb-2" onclick="viewDockerfile('${image._id}', '${image.dockerfileId || ''}')">View Dockerfile</button>
                          <button class="btn btn-primary mb-2" onclick="pushImage('${image.name}')">Push</button>
                        </div>
                          </p>
                      </div>
                    </div>
                `;
                row.appendChild(imageElement);
            });
        } catch (error) {
            console.error('Error fetching Docker images:', error);
        }
    }

    window.viewDockerfile = function(imageId, dockerfileId) {
        if (!dockerfileId) {
            Swal.fire({
                title: 'Error',
                text: 'This image does not have an associated Dockerfile.',
                icon: 'error',
                confirmButtonText: 'Ok'
            });
            return;
        }

        fetch(`/images/${imageId}/dockerfilees/${dockerfileId}`)
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(dockerfile => {
                Swal.fire({
                    title: dockerfile.name || 'Dockerfile Content',
                    html: `<pre style="text-align: left;">${dockerfile.lines.join('\n')}</pre>`,
                    customClass: {
                        popup: 'swal-wide'
                    },
                    width: '600px',
                    showCloseButton: true,
                    showCancelButton: false,
                    focusConfirm: false,
                    confirmButtonText: 'Close'
                });
            })
            .catch(error => console.error('Error fetching Dockerfile content:', error));
    };






// Function to delete a Docker image
window.deleteImage = async function(imageId) {
    try {
        const response = await fetch(`/images/${imageId}`, { method: 'DELETE' });

        if (response.ok) {
            Swal.fire('Deleted!', 'Docker image deleted successfully.', 'success').then(() => {
                fetchDockerImages(); 
            });
        } else {
            const errorMessage = await response.text(); 
            console.error('Error deleting Docker image:', errorMessage);

            if (response.status === 409) {
                Swal.fire('Error!', 'Cannot delete the image as it has dependent child images. Please delete the dependent images first.', 'error');
            } else {
                Swal.fire('Error!', errorMessage || 'An error occurred while deleting the image.', 'error');
            }
        }
    } catch (error) {
        console.error('Error deleting Docker image:', error);
        Swal.fire('Error!', 'An error occurred while deleting the image.', 'error');
    }
};


    // Function to run a Docker image
    window.runImage = async function(imageId) {
    try {
        const response = await fetch(`/images/${imageId}/run`, { method: 'POST' });

        if (response.ok) {
            alert('Image is running and container is saved to the database');
        } else {
            const errorData = await response.json();
            alert('Error: ' + errorData.error);
        }
    } catch (error) {
        console.error('Error running Docker image:', error);
    }

};
window.pushImage = async function(name) {
    console.log('Pushing image:', name); 
    try {
        const encodedName = encodeURIComponent(name);
        const response = await fetch(`/images/${encodedName}/push`, { method: 'POST' });

        if (response.ok) {
            alert('Image pushed successfully');
        } else {
            const errorData = await response.json();
            alert('Error: ' + (errorData.message || 'Failed to push image.'));
        }
    } catch (error) {
        console.error('Error pushing Docker image:', error);
        alert('An unexpected error occurred while pushing the image.');
    }
};





});



document.addEventListener("DOMContentLoaded", function() {
    let selectedImageName = null;

    window.pushImage = function(name) {
        selectedImageName = name;
        $('#dockerHubLoginModal').modal('show');
    };

    document.getElementById('dockerHubLoginSubmit').addEventListener('click', async function() {
        const username = document.getElementById('dockerHubUsername').value;
        const password = document.getElementById('dockerHubPassword').value;

        if (!username || !password) {
          Swal.fire('Error!', errorData.message || 'Please enter your Docker Hub credentials.', 'error');
            return;
        }

        try {
            $('#loadingModal').modal('show');
            
            const encodedName = encodeURIComponent(selectedImageName);
            const response = await fetch(`/images/${encodedName}/push`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ username, password })
            });

            if (!response.ok) {
                const errorData = await response.json();
                Swal.fire('Error!', errorData.message || 'Failed to push image.', 'error');

            } else {
                const responseData = await response.json();
                
                if (responseData.success) {
                  Swal.fire('Success!', 'Image pushed successfully.', 'success');
                } else {
                  Swal.fire('Error!', errorData.message || 'Failed to push image.', 'error');
                }
            }
        } catch (error) {
            console.error('Error pushing Docker image:', error);
            Swal.fire('Error!', 'An unexpected error occurred while pushing the image.', 'error');
          } finally {
            $('#dockerHubLoginModal').modal('hide');
            $('#loadingModal').modal('hide');
        }
    });
  
   

});



