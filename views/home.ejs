            <script>
              document.getElementById('saveHubConfig').addEventListener('click', async function() {
    const username = document.getElementById('hubUsername').value;
    const password = document.getElementById('hubPassword').value;
    const repositoryUrl = document.getElementById('repositoryUrl').value;

    if (username && password && repositoryUrl) {
        try {
            const response = await fetch('/hub-config/save', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ username, password, repositoryUrl }),
            });
            localStorage.setItem('dockerUsername', username);
        localStorage.setItem('dockerPassword', password);
        localStorage.setItem('repositoryUrl', repositoryUrl);

            if (response.ok) {
                alert('Docker Hub configuration saved successfully!');
                document.getElementById('configureHubForm').reset(); // Clear the form
                bootstrap.Modal.getInstance(document.getElementById('configureHubModal')).hide(); // Hide the modal
            } else {
                const errorData = await response.json();
                alert('Error: ' + errorData.message);
            }
        } catch (error) {
            console.error('Error saving Docker Hub configuration:', error);
            alert('An unexpected error occurred while saving the configuration.');
        }
    } else {
        alert('Please fill in all the fields.');
