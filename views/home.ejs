<script>
  async function fetchContainerStats() {
      try {
          const response = await fetch('/api/stats');
          if (!response.ok) {
              throw new Error('Failed to fetch container stats');
          }
          const stats = await response.json();
          return stats;
      } catch (error) {
          console.error('Error fetching container stats:', error);
      }
  }
  
  async function createChart() {
      const stats = await fetchContainerStats();
  
      if (stats) {
          const ctx = document.getElementById('statsChart').getContext('2d');
          const chart = new Chart(ctx, {
              type: 'bar',
              data: {
                  labels: ['Running Containers', 'Exited Containers'],
                  datasets: [{
                      label: 'Count',
                      data: [stats.running, stats.exited],
                      backgroundColor: ['#51E0BA', '#73B7E0']
                  }]
              },
              options: {
                  responsive: true,
                  maintainAspectRatio: false,
                  scales: {
                      y: {
                          beginAtZero: true,
                          ticks: {
                              min: 0 
                          }
                      }
                  },
                  onClick: function (event, elements) {
                      if (elements.length > 0) {
                          const firstElement = elements[0]; 
                          const clickedDatasetIndex = firstElement.datasetIndex; 
                          const clickedElementIndex = firstElement.index; 
                          
                          const label = chart.data.labels[clickedElementIndex]; 
                          console.log('Clicked bar label:', label);
                          
                          if (label === 'Running Containers') {
                              window.location.href = '/dockercontainers'; 
                          } else if (label === 'Exited Containers') {
                              window.location.href = '/dockercontainers';
                          }
                      }
                  }
              }
          });
      }
  }
  
  document.addEventListener('DOMContentLoaded', createChart);
  </script>

