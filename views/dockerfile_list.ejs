          const apiUrl = 'http://localhost:5000/dockerfilees';
  
          function loadDockerfiles() {
            fetch(apiUrl)
    .then(response => response.json())
    .then(data => {
        const container = document.getElementById('dockerfiles-container');
        container.innerHTML = ''; 

        let row; 

        data.forEach((dockerfile, index) => {
            
            if (index % 2 === 0) {
                row = document.createElement('div');
                row.className = 'row'; 
                container.appendChild(row);
            }

            const dockerfileBox = document.createElement('div');
            dockerfileBox.className = 'col-md-6'; 
            dockerfileBox.innerHTML = `
                <div class="card">
                        <div class="card-header">
                            <h4 class="card-title text-center">${dockerfile.name || 'Unnamed Dockerfile'}</h4>
                        </div>
                        <div class="card-body">
                            <p><strong>ID:</strong> ${dockerfile._id}</p>
                            <div class="dockerfile-actions text-center">
                                <button class="btn btn-info mb-2" onclick="viewDockerfile('${dockerfile._id}')">View</button>
                                <button class="btn btn-primary mb-2" onclick="updateDockerfile('${dockerfile._id}')">Update</button>
                                <button class="btn btn-success mb-2" onclick="buildDockerfile('${dockerfile._id}')">Build</button>
                                <button class="btn btn-danger mb-2" onclick="deleteDockerfile('${dockerfile._id}')">Delete</button>
                            </div>
                        </div>
                </div>
            `;

            row.appendChild(dockerfileBox);
        });
    })
    .catch(error => console.error('Error fetching Dockerfiles:', error));
  }
 // Function to delete a Dockerfile
window.deleteDockerfile = async function(dockerfileId) {
    try {
        const response = await fetch(`/dockerfilees/${dockerfileId}`, { method: 'DELETE' });
        
        if (response.ok) {
            Swal.fire('Deleted!', 'Dockerfile deleted successfully.', 'success').then(() => {
                location.reload(); 
            });
        } else {
            const errorMessage = await getErrorMessage(response);
            Swal.fire('Error!', errorMessage, 'error');
        }
    } catch (error) {
        console.error('Error deleting Dockerfile:', error);
        Swal.fire('Error!', 'Error deleting Dockerfile. Check the console for details.', 'error');
    }
};

// Helper function to parse error messages
async function getErrorMessage(response) {
    try {
        const errorData = await response.json();
        return errorData.message || 'Unknown error occurred';
    } catch (e) {
        return await response.text();
    }
}


          // Redirect to the Dockerfile generation page to update the Dockerfile
          function updateDockerfile(dockerfileId) {
              localStorage.setItem('dockerfileId', dockerfileId);
              window.location.href = '/dockerfile';
          }


// Build the Dockerfile into an image
function buildDockerfile(dockerfileId) {
    Swal.fire({
        title: 'Enter Docker Image Name',
        input: 'text',
        inputPlaceholder: 'Docker Image Name',
        showCancelButton: true,
        confirmButtonText: 'Build Image',
        preConfirm: (imageName) => {
            if (!imageName) {
                Swal.showValidationMessage('Image name is required');
                return false;
            }
            return imageName;
        }
    }).then((result) => {
        if (result.isConfirmed) {
            const imageName = result.value;

            Swal.fire({
                title: 'Building Image',
                text: 'Please wait while the Docker image is being built...',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            fetch(`${apiUrl}/build`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ imageName, dockerfileId })  
            })
            .then(response => response.json())  
            .then(data => {
                Swal.close();

                if (data.type === 'success') {
                    Swal.fire({
                        title: 'Success',
                        text: data.message,
                        icon: 'success'
                    });
                } else {
                    Swal.fire({
                        title: 'Error',
                        text: data.message,
                        icon: 'error'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    title: 'Error',
                    text: 'An error occurred while building the Docker image.',
                    icon: 'error'
                });
            });
        }
    });
}

  
          // Create a new Dockerfile
          function createNewDockerfile() {
              localStorage.removeItem('dockerfileId');
              window.location.href = '/dockerfile';
          }
  

          function viewDockerfile(dockerfileId) {
    fetch(`/dockerfilees/${dockerfileId}`)
        .then(response => response.json())
        .then(dockerfile => {
            Swal.fire({
                title: dockerfile.name || 'Dockerfile Content',
                html: `<pre style="text-align: left; white-space: pre-wrap;">${dockerfile.lines}</pre>`,
                icon: 'info',
                showCloseButton: true,
                showCancelButton: false,
                confirmButtonText: 'Close'
            });
        })
        .catch(error => {
            console.error('Error fetching Dockerfile content:', error);
            Swal.fire({
                title: 'Error!',
                text: 'Failed to fetch Dockerfile content.',
                icon: 'error',
                confirmButtonText: 'Close'
            });
        });
}


